{
    "name": "GIF Your Sorrows Away",
    "description": "GYSA displays adorable animated GIFs that instantly make you feel better.",
    "version": "0.1",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["popup/popup.js"]
        }
    ],
    "icons": {
        "16": "images/logo16.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    },
    "browser_action": {
        "default_icon": "images/logo48.png",
        "default_title": "GYSA",
        "default_popup": "popup/popup.html"
    }
}
